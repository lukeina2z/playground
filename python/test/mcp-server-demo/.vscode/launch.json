{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // PYDEVD_DISABLE_FILE_VALIDATION=1
        // set PYDEVD_DISABLE_FILE_VALIDATION=1
        // $env:PYDEVD_DISABLE_FILE_VALIDATION = "1"
        // uv run -m debugpy --listen 5678 --wait-for-client  ./.venv/bin/mcp dev main.py
        {
            "name": "Attach to MCP (debugpy)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false
        },
        {
            "name": "Run MCP Server (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/mcp.exe",
            "args": [
                "run",
                "${workspaceFolder}/main.py"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "UV_ACTIVE": "1",
                // "DANGEROUSLY_OMIT_AUTH": "true"
            },
        },
        {
            "name": "Inspect MCP Server (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/mcp",
            "args": [
                "dev",
                "${workspaceFolder}/main.py"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "UV_ACTIVE": "1",
                // "DANGEROUSLY_OMIT_AUTH": "true"
            }
        }
    ]
}