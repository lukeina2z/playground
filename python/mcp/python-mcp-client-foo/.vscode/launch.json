    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Launch MCP Client Foo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: Attach to MCP Server Foo",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/../python-mcp-server-foo",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        }
    ]
}